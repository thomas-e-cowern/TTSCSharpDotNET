@page
@model ListModel
@{ }

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" name="searchTerm" />
            <button class="btn btn-default">Search</button>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">Details</a>
        </td>
        <td>
            <a class="btn btn" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">Edit</a>

        </td>
    </tr>}
</table>